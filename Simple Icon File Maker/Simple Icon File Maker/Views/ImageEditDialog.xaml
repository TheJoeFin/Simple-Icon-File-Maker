<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="Simple_Icon_File_Maker.Views.ImageEditDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Simple_Icon_File_Maker.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    PrimaryButtonText="Apply"
    SecondaryButtonText="Cancel"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Hello from edit dialog" />
        <Grid Grid.Row="1">
            <Image Name="InputImage" Source="{x:Bind ViewModel.MainSource}" />
            <Canvas
                Name="InputImageCanvas"
                Background="Transparent"
                PointerReleased="Canvas_PointerReleased" />
        </Grid>
    </Grid>
</ContentDialog>
