<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Simple_Icon_File_Maker.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Simple_Icon_File_Maker.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TitleBar x:Name="titleBar" Title="Simple Icon File Maker">
            <TitleBar.IconSource>
                <ImageIconSource ImageSource="/SimpleIconMaker.ico" />
            </TitleBar.IconSource>
        </TitleBar>
        <Frame x:Name="NavigationFrame" Grid.Row="1" />
    </Grid>
</Page>
